#!/bin/bash
#
# ~/bin/i3lock_blur
# Lock screen with Blured screenshot and lock icon

TMPBG=/tmp/screen.png
LOCK=$HOME/.config/lock.png
RES=$(xrandr --current | grep '*' | uniq | awk '{print $1}')

ffmpeg -f x11grab -video_size $RES -y -i $DISPLAY -i $LOCK -filter_complex "boxblur=5:1,overlay=(main_w-overlay_w)/2:(main_h-overlay_h)/2" -vframes 1 $TMPBG
i3lock -i $TMPBG

